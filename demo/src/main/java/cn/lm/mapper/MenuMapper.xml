<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lm.mapper.MenuMapper">
	<resultMap id="BaseResultMap" type="cn.lm.model.Menu">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="parent_id" jdbcType="INTEGER" property="parentId" />
		<result column="status" jdbcType="TINYINT" property="status" />
	</resultMap>
	<sql id="Base_Column_List">
		id, name, parent_id, status
	</sql>
	<select id="selectByPrimaryKey" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from t_menu
		where id = #{id,jdbcType=INTEGER}
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from t_menu
		where id = #{id,jdbcType=INTEGER}
	</delete>
	<insert id="insert" parameterType="cn.lm.model.Menu" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
		insert into t_menu (id, name, parent_id,
		status)
		values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},
		#{parentId,jdbcType=INTEGER},
		#{status,jdbcType=TINYINT})
	</insert>
	<insert id="insertSelective" parameterType="cn.lm.model.Menu">
		insert into t_menu
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="parentId != null">
				parent_id,
			</if>
			<if test="status != null">
				status,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="parentId != null">
				#{parentId,jdbcType=INTEGER},
			</if>
			<if test="status != null">
				#{status,jdbcType=TINYINT},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="cn.lm.model.Menu">
		update t_menu
		<set>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="parentId != null">
				parent_id = #{parentId,jdbcType=INTEGER},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=TINYINT},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	<update id="updateByPrimaryKey" parameterType="cn.lm.model.Menu">
		update t_menu
		set name = #{name,jdbcType=VARCHAR},
		parent_id = #{parentId,jdbcType=INTEGER},
		status = #{status,jdbcType=TINYINT}
		where id = #{id,jdbcType=INTEGER}
	</update>
	<resultMap id="MenuNodeMap" type="cn.lm.model.MenuNode">
		<id column="id" property="id" />
		<result column="name" property="text" />
		<!-- <association property="parent" column="id=parent_id" select="getMenuNode" /> -->
		<collection property="children" column="parentId=id" select="getMenuTree" />
	</resultMap>
	<select id="getMenuTree" resultMap="MenuNodeMap">
		SELECT id,name,parent_id
		FROM t_menu
		WHERE parent_id
		<choose>
			<when test="parentId != null">=#{parentId}</when>
			<otherwise>IS NULL</otherwise>
		</choose>
	</select>
	<select id="getMenuNode" resultType="cn.lm.model.MenuNode">
		SELECT id,name text FROM t_menu WHERE id = #{id}
	</select>
	<select id="selectAll" resultType="cn.lm.model.MenuNode">
		SELECT id,name text,parent_id parentId FROM t_menu
	</select>
	<select id="getCountByName" resultType="int">
		SELECT COUNT(*) FROM t_menu WHERE name = #{name} AND parent_id
		<choose>
			<when test="parentId == null">IS NULL</when>
			<otherwise>= #{parentId}</otherwise>
		</choose>
	</select>
</mapper>